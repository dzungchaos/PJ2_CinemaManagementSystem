<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="statisticPanel" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.ManagerStatistic.ManagerStatisticBoundary">

    <HBox alignment="CENTER" spacing="180.0" GridPane.halignment="CENTER">
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Tổng">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="labelTotal">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
         </children>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
      </HBox>
        <HBox alignment="CENTER_RIGHT">
            <children>
            <TextField fx:id="fieldPurchasedDate" onAction="#doGetStatistic" prefWidth="100.0">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
                <Button fx:id="buttonGetStatistic" onAction="#doGetStatistic">
                    <tooltip>
                        <Tooltip text="Tìm kiếm dữ liệu thống kê" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/Find16.gif" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonExportStatistic" onAction="#doExportStatistic">
                    <tooltip>
                        <Tooltip text="In dữ liệu ra file excel" />
                    </tooltip>
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/general/Export16.gif" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <GridPane.margin>
            <Insets top="6.0" />
        </GridPane.margin>
    </HBox>

    <TableView fx:id="tableViewStatistic" GridPane.rowIndex="1">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn prefWidth="100" text="Ngày">
                <cellValueFactory>
                    <PropertyValueFactory property="purchasedDate" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="160" text="Phim">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="60.0" text="Lượt xem">
                <cellValueFactory>
                    <PropertyValueFactory property="viewCount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Doanh thu">
                <cellValueFactory>
                    <PropertyValueFactory property="turnover" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
