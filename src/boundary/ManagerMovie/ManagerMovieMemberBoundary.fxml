<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="moviePanel" alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.ManagerMovie.ManagerMovieMemberBoundary">

    <HBox alignment="CENTER" spacing="260.0" GridPane.halignment="CENTER">
      <HBox>
         <HBox.margin>
            <Insets top="5.0" />
         </HBox.margin>
         <children>
              <Button fx:id="buttonShowDetail" onAction="#doShowMovieDetail">
                  <tooltip>
                      <Tooltip text="Xem chi tiết phim" />
                  </tooltip>
                  <graphic>
                      <ImageView>
                          <Image url="@/toolbarButtonGraphics/general/About16.gif" />
                      </ImageView>
                  </graphic>
              </Button>
            <Button fx:id="buttonBuyTicket" onAction="#doBuyTicket">
                <graphic>
                    <ImageView>
                        <Image url="@/toolbarButtonGraphics/general/History16.gif" />
                    </ImageView>
                </graphic>
            </Button>
         </children>
      </HBox>
      <HBox>
         <children>
              <TextField fx:id="fieldFindMovie" onKeyReleased="#doSearchMovie">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
              <Button>
                  <graphic>
                      <ImageView>
                          <Image url="@/toolbarButtonGraphics/general/Find16.gif" />
                      </ImageView>
                  </graphic>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
              </Button>
         </children>
      </HBox>
    </HBox>

    <TableView fx:id="tableViewMovie" GridPane.rowIndex="1">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn prefWidth="60.0" text="ID Phim">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_id" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150.0" text="Tên Phim">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="120.0" text="Đạo diễn">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_director" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="120.0" text="Diễn viên">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_actors" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Công chiếu">
                <cellValueFactory>
                    <PropertyValueFactory property="movies_airDate" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
