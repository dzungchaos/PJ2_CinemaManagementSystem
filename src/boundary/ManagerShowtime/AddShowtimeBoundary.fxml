      <ComboBox fx:id="boxTime" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="fieldDate" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <ComboBox fx:id="boxCinema" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <HBox alignment="CENTER" prefHeight="35.0" prefWidth="200.0" spacing="69.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
         <children>
            <Button fx:id="buttonAdd" mnemonicParsing="false" onAction="#doAddShowtime" prefWidth="75.0" text="Thêm" />
            <Button fx:id="buttonExit" mnemonicParsing="false" onAction="#closeWindow" prefWidth="75.0" text="Thoát" />
         </children>
      </HBox>

   </children>
