<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="20" prefHeight="400.0" prefWidth="400.0" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.PersonalInfo.ModifyPersonalInfoBoundary">

    <Label text="THAY ĐỔI THÔNG TIN CÁ NHÂN" GridPane.columnSpan="2" GridPane.halignment="CENTER">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
    <Label text="Họ và tên: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
   <Label text="Số điện thoại" GridPane.rowIndex="2" />
   <Label text="Giới tính" GridPane.rowIndex="3" />
   <Label text="Ngày sinh" GridPane.rowIndex="4" />
   <Label text="Địa chỉ" GridPane.rowIndex="5" />
   <TextField fx:id="fieldName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <TextField fx:id="fieldPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <TextField fx:id="fieldGender" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <TextField fx:id="fieldBirthday" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <TextField fx:id="fieldAddress" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   <HBox alignment="CENTER" prefHeight="35.0" prefWidth="200.0" spacing="80.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
      <children>
         <Button fx:id="buttonUpdate" mnemonicParsing="false" prefWidth="75.0" text="Cập nhật" HBox.hgrow="ALWAYS" onAction="#doModify">
            <HBox.margin>
               <Insets left="10.0" right="10.0" top="5.0" />
            </HBox.margin></Button>
         <Button fx:id="buttonExit" mnemonicParsing="false" prefWidth="75.0" text="Thoát" HBox.hgrow="ALWAYS"
         onAction="#closeWindow">
            <HBox.margin>
               <Insets left="10.0" right="10.0" top="5.0" />
            </HBox.margin></Button>
      </children></HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
